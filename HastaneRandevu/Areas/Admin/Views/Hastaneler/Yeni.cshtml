@model HastaneRandevu.Areas.Admin.ViewModels.HastaneYeni
@{
    ViewBag.Title = "Yeni Hastane";
}
<h1>Yeni Hastane Ekle</h1>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(x => x.IlceID)
        @Html.TextBoxFor(x => x.IlceID, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.HastaneAdi)
        @Html.TextBoxFor(x => x.HastaneAdi, new { @class = "form-control" })
    </div>



    <input type="submit" value="Oluştur" class="btn btn-primary" />
    <a href="@Url.Action("index")">or cancel</a>


}
