@model HastaneRandevu.Areas.Admin.ViewModels.HekimSifre
@{
    ViewBag.Title = "Şifre Değiştir";
}
<h1>Reset Password for User :  @Model.HekimAdi </h1>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(x => x.Parola)
        @Html.PasswordFor(x => x.Parola, new { @class = "form-control" })
    </div>

    <input type="submit" value="Reset Password" class="btn btn-primary" />
    <a href="@Url.Action("index")">or cancel</a>

}
